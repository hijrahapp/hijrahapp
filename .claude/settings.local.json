{
  "permissions": {
    "allow": [
      "mcp__laravel-boost__database-schema",
      "mcp__jetbrains__execute_terminal_command",
      "mcp__laravel-boost__database-query",
      "mcp__laravel-boost__list-artisan-commands",
      "mcp__laravel-boost__list-routes",
      "Bash(./vendor/bin/phpunit:*)",
      "mcp__laravel-boost__tinker",
      "Bash(php artisan migrate:*)",
      "Bash(php artisan optimize:clear:*)",
      "Bash(php artisan tinker:*)",
      "Bash(php artisan l5-swagger:generate:*)",
      "Bash(php artisan:*)",
      "Bash(vendor/bin/pint:*)",
      "Bash(php:*)",
      "Bash(mv:*)",
      "Bash(find:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "laravel-boost"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$CLAUDE_TOOL_FILE\" =~ (routes/api\\.php|app/Http/Controllers/.*\\.php|app/Swagger/.*\\.php|app/Resources/.*\\.php) ]]; then echo 'ðŸ”„ Regenerating Swagger documentation due to API changes...'; php artisan l5-swagger:generate --no-interaction; fi"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff || say 'Task completed'"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Ping.aiff || say 'Permission required'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Submarine.aiff || say 'Agent stopped'"
          }
        ]
      }
    ]
  }
}